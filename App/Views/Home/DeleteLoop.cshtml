@model App.Models.DeleteLoopModel
@{
    ViewData["Title"] = "Loop Remover";
}
<div class="container">
    <form asp-action="DeleteLoop">
        <input type="hidden" asp-for="Id">
        <h2>Are you sure you want to delete this bus?</h2>
        <div class="form-group">
            <button input="submit"value="Yes" class="btn btn-primary">
        </div>
        <div class="form-group">
            <a asp-action="Index">No</a>
        </div>
    </form>
</div>
