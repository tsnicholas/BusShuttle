@model App.Models.Manager.CreateBusModel;
@{
    ViewData["Title"] = "Create Bus";
}

<h2>Bus Creator</h2>
<a asp-action="Index">Back to Table</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
