@model App.Models.Manager.CreateBusModel;
@{
    ViewData["Title"] = "Create Bus";
}

<a asp-action="Index" class="link-info">Back to Table</a>
<div class="flex flex-col justify-content-center border border-secondary text-center p-5 m-5">
    <form asp-action="CreateBus">
        <div asp-validation-summary="ModelOnly" class="text-danger form-text"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group py-2 my-2">
            <label asp-for="BusNumber" class="control-label fs-3 text-light"></label>
            <input asp-for="BusNumber" class="form-control text-light bg-dark" />
            <span asp-validation-for="BusNumber" class="text-danger form-text"></span>
        </div>
        <div class="form-group py-2 my-2">
            <input type="submit" value="Save" class="btn btn-primary btn-lg w-25 text-light" />
        </div>
    </form>
</div>
