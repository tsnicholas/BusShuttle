@model App.Models.Driver.LoopEntryModel;
@{
    ViewData["Title"] = "Loop";
}

<form asp-action="SubmitEntry" method="POST">
    <input type="hidden" asp-for="BusDriver" />
    <input type="hidden" asp-for="TheBus" />
    <input type="hidden" asp-for="BusLoop" />
    <div class="form-group">
        <select asp-for="StopId" class="form-control">
            @foreach(var stop in Model.Stops)
            {
                <option value="@stop.Id">@stop.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Boarded" class="control-label"></label>
        <input asp-for="Boarded" class="form-control" />
        <span asp-validation-for="Boarded" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeftBehind" class="control-label"></label>
        <input asp-for="LeftBehind" class="form-control" />
        <span asp-validation-for="LeftBehind" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Entry" class="btn btn-primary" />
    </div>
</form>
<p>Route Count: @Model.BusLoop.Routes.Count()</p>
