@model App.Models.Manager.DeleteStopModel
@{
    ViewData["Title"] = "Stop Remover";
}

<div class="flex flex-col justify-content-center border border-secondary p-5 m-5 text-center">
    <form asp-action="DeleteStop">
        <input type="hidden" asp-for="Id">
        <div class="vstack gap-3 text-center">
            <h2 class="text-light">Are you sure you want to delete this stop?</h2>
            <div class="hstack gap-5 justify-content-center">
                <button input="submit" class="btn btn-lg btn-primary text-light">Yes</button>
                <button asp-action="Index" class="btn btn-lg btn-primary text-light">No</button>
            </div>
        </div>
    </form>
</div>
