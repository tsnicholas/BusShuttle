@model App.Models.Manager.DeleteDriverModel
@{
    ViewData["Title"] = "Driver Remover";
}
<div class="flex flex-col justify-content-center border border-secondary p-5 m-5 text-center">
    <form asp-action="DeleteDriver" method="POST">
        <input type="hidden" asp-for="Id">
        <div asp-validation-summary="ModelOnly" class="text-danger form-text"></div>
        <div class="vstack gap-3 text-center">
            <h2 class="text-light">Are you sure you want to delete this driver?</h2>
            <div class="hstack gap-5 justify-content-center">
                <button input="submit" class="btn btn-lg btn-primary text-light">Yes</button>
                <a asp-action="Index" class="btn btn-lg btn-primary text-light">No</a>
            </div>
        </div>
    </form>
</div>
